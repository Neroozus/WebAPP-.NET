@model Microsoft.AspNetCore.Identity.IdentityRole
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <form asp-action="Delete" asp-controller="Roles" method="post">
            <div class="modal-header">
                <h5 class="modal-title">Подтверждение удаления роли</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" asp-for="@Model.Id" name="id" id="id" />
                <p>
                    Вы действительно хотите удалить роль: @Model.Name?
                </p>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Отменить</button>

                <button type="submit" id="confirmDeleteBtn" class="btn btn-danger">Удалить</button>
            </div>
        </form>
    </div>

</div>