@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<body>
    <div class="container mx-auto my-2 my-sm-3 my-lg-4 p-1" style="text-align:center">
        <div class="row">
            <div class="col-12">
                <h2>Список ролей</h2>
                <br />
                @if (TempData["messageSuccess"] != null)
                {
                    <div class="alert alert-success" id="successRoles" role="alert">
                        <strong>Успешно!</strong>
                        @TempData["messageSuccess"]
                    </div>
                }
                @if (TempData["messageDanger"] != null)
                {
                    <div class="alert alert-danger" id="dangerRoles" role="alert">
                        <strong>Ошибка!</strong>
                        @TempData["messageDanger"]
                    </div>
                }
                <table class="table table-striped" style="text-align:center">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Роль</th>
                            <th>Действие</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Id</td>
                                <td>@role.Name</td>
                                <td><button type="button" id="DeleteButton" data-url="@Url.Action($"Delete/{role.Id}")" class="btn btn-danger btn-sm">Удалить</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-6">
                <div class="form-group" style="text-align:right">
                    <form asp-action="Create" asp-controller="Roles">
                        <button type="submit" class="btn btn-sm btn-success">Добавить роль</button>
                    </form>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group" style="text-align:left">
                    <form asp-action="UserList" asp-controller="Roles">
                        <button type="submit" class="btn btn-sm btn-success">Список пользователей</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <div class="modal fade" id="modDialog" tabindex="-1" role="dialog" aria-labelledby="modDialog" aria-hidden="true">
        <div id="dialogContent" class="modal-dialog" role="document"></div>
    </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js" integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

   
    <script src="~/js/RolesPartialModal.js"></script>
</body>
    