@using TestAuth.Models
@model ComputerPartsModel

    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Подтверждение удаления товара</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form asp-action="DeletePart" asp-controller="Home" method="post">
                <input type="hidden" asp-for="@Model.Id" id="id" name="id" />
                <input type="hidden" asp-for="@Model.Manufacturer" class="form-control" name="manufacturer" id="manufacturer" />
                <input type="hidden" asp-for="@Model.ComputerPart" class="form-control" name="computerPart" id="computerPart" />
                <input type="hidden" asp-for="@Model.Quantity" class="form-control" name="quantity" id="quantity" />
                <p style="text-align:justify">
                    Вы действительно хотите удалить <b>товар</b>:<br />
                    <b>производитель</b>: @Model.Manufacturer;<br />
                    <b>комплектующее</b>: @Model.ComputerPart;<br />
                    <b>количество</b>: @Model.Quantity.
                </p>
            </form>
        </div>

        <div class="modal-footer">

            <button type="button" class="btn btn-secondary" data-dismiss="modal">Отменить</button>

            <button type="submit" id="confirmDeleteBtn" class="btn btn-danger">Удалить</button>
        </div>

    </div>
    <script src="~/js/ComputerPartsPartialModal.js"></script>
